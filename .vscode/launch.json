{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug(with backend)",
          "type": "node",
          "request": "launch",
          "cwd": "${workspaceFolder}",
          "runtimeExecutable": "npm",
          "runtimeArgs": [
              "run",
              "dev:electron"
          ],
          "env": { // Overwrite env variables
              "LOCAL_RUNTIME_ROOT": "${workspaceFolder}/runtime"
          },
          "console": "integratedTerminal",
          "autoAttachChildProcesses": true,
          "preLaunchTask": "npm: dev:renderer",
          "skipFiles": [
              "<node_internals>/**"
          ]
      },
      {
          "name": "Debug(NO backend)",
          "type": "node",
          "request": "launch",
          "cwd": "${workspaceFolder}",
          "runtimeExecutable": "npm",
          "runtimeArgs": [
              "run",
              "dev:electron"
          ],
          "env": { // Overwite env variables
              "LOCAL_SERVICE_LAUNCH_PYTHON_SERVER": "false"
          },
          "console": "integratedTerminal",
          "autoAttachChildProcesses": true,
          "preLaunchTask": "npm: dev:renderer",
          "skipFiles": [
              "<node_internals>/**"
          ]
      }
  ],
}